# Empire v7.3 - Environment Variables Example
# Copy this file to .env and fill in your actual values
# SECURITY: Never commit .env file to version control!

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================

# Enable email notifications (true/false)
EMAIL_NOTIFICATIONS_ENABLED=false

# Email provider (smtp or sendgrid)
EMAIL_PROVIDER=smtp

# SMTP Configuration (for Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=<your-email@gmail.com>
SMTP_PASSWORD=<your-app-password>
SMTP_USE_TLS=true

# SendGrid Configuration (alternative to SMTP)
SENDGRID_API_KEY=<your-sendgrid-api-key>

# Email sender details
EMAIL_FROM=noreply@empire.ai
EMAIL_FROM_NAME=Empire v7.3

# Long-running task threshold (in seconds)
LONG_RUNNING_TASK_THRESHOLD=300  # 5 minutes

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase
SUPABASE_URL=<from .env>
SUPABASE_SERVICE_KEY=<from .env>

# Neo4j
NEO4J_URI=bolt+ssc://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=<from .env>

# Neo4j Connection Pooling (Task 43.3+ Phase 2)
# Maximum connections in Neo4j pool (default: 50)
NEO4J_MAX_CONNECTIONS=50
# Connection acquisition timeout in seconds (default: 30)
NEO4J_CONNECTION_TIMEOUT=30

# Redis
REDIS_URL=redis://localhost:6379/0

# Redis Connection Pooling (Task 43.3+ Phase 2)
# Maximum connections in Redis pool (default: 50)
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# LlamaIndex Service
LLAMAINDEX_SERVICE_URL=https://jb-llamaindex.onrender.com

# CrewAI Service
CREWAI_SERVICE_URL=https://jb-crewai.onrender.com

# =============================================================================
# AI API KEYS
# =============================================================================

ANTHROPIC_API_KEY=<from .env>
OPENAI_API_KEY=<from .env>
LLAMA_CLOUD_API_KEY=<from .env>

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Clerk Authentication
CLERK_SECRET_KEY=<your-clerk-secret-key>

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

CORS_ORIGINS=*

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

PORT=8082
ENVIRONMENT=development

# =============================================================================
# MONITORING
# =============================================================================

PROMETHEUS_ENABLED=true

# =============================================================================
# FEATURE FLAGS (Task 3.2-3.4)
# =============================================================================

# Feature flag system uses existing Supabase + Redis infrastructure
# All feature flags are stored in the feature_flags table in Supabase
# Redis is used for caching flag states for high performance

# Enable Redis caching for feature flags (default: true)
# Set to false to disable caching (not recommended for production)
FEATURE_FLAGS_CACHE_ENABLED=true

# Cache TTL in seconds (default: 60)
# How long to cache flag states before re-querying database
FEATURE_FLAGS_CACHE_TTL=60

# NOTE: Feature flag database migrations must be run separately:
# - 20251124_v73_create_feature_flags.sql
# No additional environment variables are required for basic operation

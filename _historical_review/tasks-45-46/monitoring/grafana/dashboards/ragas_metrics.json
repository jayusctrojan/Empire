{
  "dashboard": {
    "title": "RAGAS Metrics - Empire v7.2",
    "tags": [
      "ragas",
      "rag",
      "evaluation",
      "empire"
    ],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h"
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Aggregate RAGAS Score",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "avg(ragas_aggregate_score)",
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "${DS_PROMETHEUS}"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.7
                },
                {
                  "color": "green",
                  "value": 0.85
                }
              ]
            },
            "mappings": [],
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        },
        "options": {
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "Faithfulness Score",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "avg(ragas_faithfulness_score)",
            "refId": "A",
            "legendFormat": "Faithfulness",
            "datasource": {
              "type": "prometheus",
              "uid": "${DS_PROMETHEUS}"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "showPoints": "auto"
            },
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 3,
        "title": "Answer Relevancy Score",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "avg(ragas_answer_relevancy_score)",
            "refId": "A",
            "legendFormat": "Answer Relevancy",
            "datasource": {
              "type": "prometheus",
              "uid": "${DS_PROMETHEUS}"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "showPoints": "auto"
            },
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 4,
        "title": "Context Precision Score",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "avg(ragas_context_precision_score)",
            "refId": "A",
            "legendFormat": "Context Precision",
            "datasource": {
              "type": "prometheus",
              "uid": "${DS_PROMETHEUS}"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "showPoints": "auto"
            },
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 5,
        "title": "Context Recall Score",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "avg(ragas_context_recall_score)",
            "refId": "A",
            "legendFormat": "Context Recall",
            "datasource": {
              "type": "prometheus",
              "uid": "${DS_PROMETHEUS}"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "showPoints": "auto"
            },
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        }
      }
    ]
  },
  "overwrite": true
}

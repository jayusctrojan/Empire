# Empire v7.3 - Environment Variables Example
# Copy this file to .env and fill in your actual values
# SECURITY: Never commit .env file to version control!

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================

# Enable email notifications (true/false)
EMAIL_NOTIFICATIONS_ENABLED=false

# Email provider (smtp or sendgrid)
EMAIL_PROVIDER=smtp

# SMTP Configuration (for Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=<your-email@gmail.com>
SMTP_PASSWORD=<your-app-password>
SMTP_USE_TLS=true

# SendGrid Configuration (alternative to SMTP)
SENDGRID_API_KEY=<your-sendgrid-api-key>

# Email sender details
EMAIL_FROM=noreply@empire.ai
EMAIL_FROM_NAME=Empire v7.3

# Long-running task threshold (in seconds)
LONG_RUNNING_TASK_THRESHOLD=300  # 5 minutes

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase
SUPABASE_URL=<from .env>
SUPABASE_SERVICE_KEY=<from .env>

# Neo4j
NEO4J_URI=bolt+ssc://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=<from .env>

# Redis
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# LlamaIndex Service
LLAMAINDEX_SERVICE_URL=https://jb-llamaindex.onrender.com

# CrewAI Service
CREWAI_SERVICE_URL=https://jb-crewai.onrender.com

# =============================================================================
# AI API KEYS
# =============================================================================

ANTHROPIC_API_KEY=<from .env>
OPENAI_API_KEY=<from .env>
LLAMA_CLOUD_API_KEY=<from .env>

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Clerk Authentication
CLERK_SECRET_KEY=<your-clerk-secret-key>

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

CORS_ORIGINS=*

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

PORT=8082
ENVIRONMENT=development

# =============================================================================
# MONITORING
# =============================================================================

PROMETHEUS_ENABLED=true
